<%- include("./partials/header") %>
<div class="d-flex justify-content-center"><h1 class="blog-show-title ">All <span>Blogs</span></h1></div>

<%blogs.forEach(function(blog){  %>       
	<div class="d-flex justify-content-center">
	  <div class="blog-card">
		<div class="row">
		  <div class="col-sm-3 col-12">
			<div class="blog-image">
			  <img src="<%=blog.image%>"> 
			</div>
		  </div>
		  <div class="col-sm-9 col-12">
			<div class="blog-card-info">
			  <button type="button" class="btn btn category <%=blog.category%> first btn-sm"><%=blog.category%></button>
			  <h2 class="blog-card-title"><%= blog.title %>
			  </h2>
			  <h3  class="blog-card-author">
				<%=blog.author%>
			  </h3>
			  <p class="summary">"<%=blog.description%>"</p>
			  <span><%=blog.created%></span>
			  <a class="show-blog" href="/blogs/<%=blog._id%>">Read More <i class="far fa-bookmark"></i></a>
			</div>
		  </div>
		</div>
	  </div>

	</div>     
<% }) %>


<%- include("./partials/footer") %>


